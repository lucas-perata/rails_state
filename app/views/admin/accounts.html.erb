<div class="mt-4">
    <h2>Accounts</h2>
<% @accounts.each do |account| %>
<div class="row">
    <div class="col-sm-2">
        <%= account.first_name %>
    </div>
    <div class="col-sm-2">
        <%= account.email %>
    </div>
    <div class="col-sm-2">
        <%= account.company %>
    </div>
    <div class="col-sm-2">
        <%= account.properties.count %>
    </div>
    <div class="col-sm-2">
        <%= account.created_at.strftime("%d %m %Y") %>
    </div>
    <div class="col-sm-2">
        <%= link_to "Profile", profile_path(account.id) %>    
    </div>
</div>
<% end %>
</div>