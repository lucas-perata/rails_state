<div id="<%= dom_id post %>">
  <div class="d-flex justify-content-center w-2">
    <img
      class="profile-back"
      src="<%= post_main(post)%>"
      alt="Profile background"
      style="width: auto; height: 52vh"
    />
  </div>
  <div class="container">
    <div class="row">
      <div class="col-7">
        <h2 class="h2"><%= post.title %></h2>
        <p class="h2"></p>

        <div class="">
          <div id="post-details"><%= post.body %></div>
        </div>
      </div>

      <div class="col-sm-3 p-3 text-center">
        <div class="row bg-light"></div>
      </div>
    </div>
  </div>
</div>
