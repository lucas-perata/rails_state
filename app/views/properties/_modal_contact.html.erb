<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">
        New message to <strong class="text-success"><%= @agent.first_name %></strong>
      </h5>
      <button
        type="button"
        class="close"
        data-dismiss="modal"
        aria-label="Close"
      >
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
   <%= form_tag email_agent_path, id:"email-agent", class:"modal-body text-start ", method: :post do %>

      <div class="form-group mt-4">
        <label for="recipient-name" class="col-form-label">First name:</label>
        <%= text_field_tag :first_name, nil, class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="recipient-name" class="col-form-label">Last name:</label>
        <%= text_field_tag :last_name, nil, class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="recipient-name" class="col-form-label">Email:</label>
        <%= text_field_tag :email, nil, class:"form-control"  %>
      </div>

      <%= hidden_field_tag :agent_id, @agent.id %>

      <div class="form-group">
        <label for="recipient-name" class="col-form-label">Message:</label>
        <%= text_area_tag :message, nil, class:"form-control" %>
      </div>
    <% end %>

    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">
        Close
      </button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div>
  </div>
</div>
